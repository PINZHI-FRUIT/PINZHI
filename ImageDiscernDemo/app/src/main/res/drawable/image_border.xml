<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 外边框颜色和宽度 -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" /> <!-- 更柔和的灰色边框 -->

    <!-- 内部填充颜色 -->
    <solid
        android:color="#FFFFFF" /> <!-- 白色填充 -->

    <!-- 圆角半径 -->
    <corners android:radius="20dp" /> <!-- 更大的圆角半径，使边框更圆润 -->

</shape>
